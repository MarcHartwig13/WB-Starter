"options": [
{ "name": 'classes', "required": false, "type": 'string', "default": `''`, "description": `Classes added that allow for variations in styles or functionality.` },
{ "name": 'imageOptions', "required": false, "type": 'object', "default": `{}`, "description": `Options passed directly into the images.image macro. See options above.` },
{ "name": 'styles', "required": false, "type": 'string', "default": `''`, "description": `Styles that are appended to ` }
]
}); %>

<%- include('../../ejs_includes/style_inventory/_wrapper', {"activeItem": currentSection, "intro": intro, "modules": modules}) %>