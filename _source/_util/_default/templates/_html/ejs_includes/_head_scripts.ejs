    <!-- scripts -->
    <script type="text/javascript">
        var jsSection = 'home',
            jsDevMode = <% if (release) { %>false<% } else { %>true<% } %>,
            jsVersion = <% if (release) { %>'<%= version %>'<% } else { %>Math.floor(new Date().getTime() / 1000)<% } %>,
            jsThemePath = '<%= site_root %>';

        var jsModulePaths = {
            'idealimageslider': '_lib/idealimageslider.js?v=' + jsVersion,
            'jquery': '_lib/jquery.js?v=' + jsVersion,
            'scrollmonitor': '_lib/scrollMonitor.js?v=' + jsVersion,
            'vue': jsDevMode ? '_lib/vue.js?v=' + jsVersion : '_lib/vue.min.js?v=' + jsVersion,
            'global': 'global.js?v=' + jsVersion,
            'home': 'home.js?v=' + jsVersion,
            'lazy': 'lazy.js?v=' + jsVersion,
            'vuecomponents': 'vue-components.js?v=' + jsVersion,
        };

        // remove no-js class for when Javascript is enabled
        document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/g, '') + ' js ';

        <%- include(loadcss) %>

        // load CSS
        loadCSS("<%= site_root %>css/all.css?v=" + jsVersion);
    </script>

    <!-- critcss -->
    <% if (critCssEnabled) { %><!-- SET COOKIE, THEN CHECK FOR IT. IF COOKIE IS FOUND, SKIP CRITCSS BECAUSE CSS FILE SHOULD ALREADY BE CACHED -->
    <style><%- include(critcsshome) %></style><% } else { %><!-- CRITICAL CSS --><% } %>

    <!-- styles -->
    <noscript>
        <!-- backup for critcss -->
        <link rel="stylesheet" href="<%= site_root %>css/all.css?v=<%= version %>">
    </noscript>