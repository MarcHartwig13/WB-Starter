{% extends 'partials/_component.twig' %}

{# Variables #}
{% set lazyLoad = lazyLoad ?? true %}
{% set loop = loop ?? false %}
{% set url = url %}

{% block content -%}
    <audio {% if lazyLoad %}data-lazy-load data-{% endif %}src="{{ url }}"{{ loop ? ' loop' : '' }} controls></audio>
    <noscript><audio src="{{ url }}"{{ loop ? ' loop' : '' }} controls></audio></noscript>
{%- endblock %}