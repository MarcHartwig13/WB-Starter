{# @var craft \craft\web\twig\variables\CraftVariable #}

{% extends 'partials/_component.twig' %}

{# Component element overrides #}
{% set element = 'accordion' %}

{# Variables #}
{% set accordionId = accordionId ?? 'accordion' %}
{% set columns = columns ?? 1 %}
{% set data = data %}

{% set attributes -%}
    accordion-id="{{ accordionId }}" {{ attributes ?? null }}
{%- endset %}

{% block content -%}
    {% for item in data %}
        <accordion-tab accordion-id="{{ accordionId }}" title="{{ item.title }}"{% if loop.first %} :selected="true"{% endif %} v-cloak>{{ item.content }}</accordion-tab>
    {% endfor %}
{%- endblock %}