{% extends 'partials/_component.twig' %}

{# Variables #}
{% set label = label ?? '' %}
{% set target = target ?? '' %}
{% set url = url ?? null %}

{# Component element overrides #}
{% set element = (url ?? false) ? 'a' : 'button' %}

{% set attributes -%}
    {% if url ?? false %}href="{{ url }}"{% if target ?? false %} target="{{ target }}"{% if target == '_blank' %} rel="noopener"{% endif %}{% endif %}{% endif %} {{ attributes ?? null }}
{%- endset %}

{% block content -%}
    {{ label }}
{%- endblock %}